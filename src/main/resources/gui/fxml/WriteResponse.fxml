<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>

<HBox fx:id="windowContainer" prefHeight="210.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="org.aldeon.gui.controllers.WriteResponseController">
  <children>
    <StackPane prefHeight="150.0" prefWidth="200.0">
      <children>
        <Rectangle fx:id="colorRectangle" arcHeight="30.0" arcWidth="20.0" fill="DODGERBLUE" height="210.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="600.0" >
            <effect>
                <DropShadow color="#0000009b" offsetY="5.0" />
            </effect>
        </Rectangle>
        <Rectangle arcHeight="0.0" arcWidth="0.0" fill="#202020" height="210.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="570.0">
          <StackPane.margin>
            <Insets left="20.0" right="20.0" />
          </StackPane.margin>
        </Rectangle>
        <VBox id="VBox" alignment="CENTER" spacing="5.0">
          <children>
            <TextArea fx:id="responseContent" prefWidth="200.0" wrapText="true" />
            <HBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="200.0">
              <children>
                <Button fx:id="sendResponse" mnemonicParsing="false" onMouseClicked="#sendResponseClicked" text="Send" />
              </children>
            </HBox>
          </children>
          <padding>
            <Insets right="220.0" />
          </padding>
          <StackPane.margin>
            <Insets left="30.0" right="30.0" top="10.0" />
          </StackPane.margin>
        </VBox>
        <ScrollPane fx:id="identityScroll" id="ScrollPane" prefViewportHeight="180.0" prefViewportWidth="190.0">
          <content>
            <ListView fx:id="identityList" prefHeight="200.0" prefWidth="200.0" />
          </content>
          <StackPane.margin>
            <Insets bottom="10.0" left="370.0" right="30.0" top="10.0" />
          </StackPane.margin>
        </ScrollPane>
      </children>
    </StackPane>
  </children>
  <stylesheets>
    <URL value="@../css/style.css" />
  </stylesheets>
</HBox>
