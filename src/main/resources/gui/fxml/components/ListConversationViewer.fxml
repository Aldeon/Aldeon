<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" style="-fx-background-color: #444444;">
    <center>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0"  vbarPolicy="ALWAYS" style="-fx-background-color: transparent">
      <content>
          <BorderPane>
              <top>
                  <VBox fx:id="ancestors" spacing="16.0" style="" opacity="0.8">
                      <padding>
                          <Insets top="16.0" left="16.0" right="16.0" />
                      </padding>
                  </VBox>
              </top>
              <center>
                  <VBox fx:id="focused" spacing="16.0" style="-fx-background-color: #333333;-fx-background-insets: 8px;-fx-background-radius: 16px;">
                      <padding>
                          <Insets top="16.0" bottom="16.0" left="16.0" right="16.0" />
                      </padding>
                  </VBox>
              </center>
              <bottom>
                  <VBox fx:id="children" spacing="16.0" style="">
                      <padding>
                          <Insets bottom="16.0" left="48.0" right="16.0" />
                      </padding>
                  </VBox>
              </bottom>
          </BorderPane>
      </content>
    </ScrollPane>
    </center>
</fx:root>
